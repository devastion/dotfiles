[init]
  defaultBranch = "main"
  templateDir = "~/.config/git/templates"

[core]
  editor = "nvim"
  excludesFile = "~/.config/git/global.gitignore"
  attributesFile = "~/.config/git/global.gitattributes"
  autocrlf = input
  compression = 9
  whitespace = error

[diff]
  tool = "nvimdiff"
  submodule = "log"

[difftool]
  prompt = false

[difftool "nvimdiff"]
  cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[merge]
  tool = "nvimdiff"
  ff = true

[mergetool]
  prompt = false
  keepBackup = false

[mergetool "nvimdiff"]
  layout = "LOCAL,BASE,REMOTE / MERGED"

[pull]
  ff = true

[push]
  autoSetupRemote = true
  followTags = true
  default = "simple"
  recurseSubmodules = "check"

[rebase]
  autoSquash = true
  autoStash = true
  instructionFormat = "[%an - %ar] %s"

[rerere]
  enabled = true

[help]
  autoCorrect = "prompt"

[branch]
  autoSetupMerge = true
  autoSetupRebase = "never"
  sort = "-committerdate"

; force ssh
[url "git@github.com:"]
  insteadOf = "https://github.com/"

; example git clone gh:devastion/dotfiles
[url "git@github.com:"]
  insteadOf = "gh:"

[include]
  path = "~/.config/git/alias.gitconfig"
  path = "~/.config/git/delta.gitconfig"
  path = "~/.config/git/local.gitconfig"
; vim:ft=gitconfig
